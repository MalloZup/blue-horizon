%div#flash.alert.alert-danger.alert-dismissable.fade.show{style: 'display: none;'}
  %span#error_message
  %button.close{ type: 'button' }
    %i.eos-icons close
%div.card
  %h3.card-header= t('page_title.plan')
  %div.card-body
    %p= markdown(t('page_subtitle.plan_info'))
    %hr
    = loading_icon
    %pre.pre-scrollable
      %code.output= @show_output
%p.clearfix
  %div.float-right.btn-group.steps-container
    - if Rails.configuration.x.advanced_mode
      = link_to sources_path, class: "btn btn-secondary", title: t('tooltips.prior_step'), data: { toggle: 'tooltip' } do
        %i.eos-icons.eos-18 fast_rewind
        = t('sidebar.variables')
    - else
      = link_to variables_path, class: "btn btn-secondary", title: t('tooltips.prior_step'), data: { toggle: 'tooltip' } do
        %i.eos-icons fast_rewind
        = t('sidebar.variables')
    = link_to plan_path, class: "btn btn-outline-primary", id: "submit-plan", title: t('tooltips.run'), data: { method: :put, remote: true, toggle: 'tooltip', disable_with: t('running') } do
      %i.eos-icons build
      = t('plan')
    = link_to plan_path(format: :json), class: "btn btn-outline-primary #{'disabled' unless can(deploy_path)}", title: t('tooltips.download_plan'), data: { toggle: 'tooltip' }  do
      %i.eos-icons  get_app
      = t('sidebar.download_plan')
    = link_to deploy_path, class: "btn btn-primary #{'disabled' unless can(deploy_path)}", title: t('tooltips.start_action') do
      %i.eos-icons fast_forward
      = t('sidebar.deploy')
%p.clearfix
